# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
COUCHDB_USER=admin
COUCHDB_PASSWORD=your-secure-couchdb-password

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters

# NextAuth Configuration
NEXTAUTH_SECRET=your-secure-nextauth-secret-key
NEXTAUTH_URL=https://cms.yourdomain.com

# API URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Domain Configuration
DOMAIN=yourdomain.com
CMS_DOMAIN=cms.yourdomain.com
API_DOMAIN=api.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Email Configuration (for contact forms and notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://cms.yourdomain.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1