{
  "name": "saas-startup-platform",
  "version": "0.1.0",
  "private": true,
  "description": "SaaS & Tech Startup platform with public website and CMS",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:containers": "docker compose up --build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:ui": "turbo test:storybook",
    "test:visual": "turbo test:visual",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "containers:up": "docker compose up -d",
    "containers:down": "docker compose down",
    "containers:logs": "docker compose logs -f",
    "containers:build": "docker compose build",
    "containers:clean": "docker compose down -v --remove-orphans",
    "db:init": "node scripts/init-db.js",
    "db:reset": "node scripts/reset-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:migrate": "node scripts/migrate-db.js run",
    "db:migrate:list": "node scripts/migrate-db.js list",
    "db:test:init": "node scripts/init-test-db.js",
    "db:test:clean": "node scripts/init-test-db.js clean",
    "db:test": "node scripts/test-scripts.js",
    "setup": "pnpm install && pnpm containers:build",
    "reset": "pnpm clean && pnpm containers:clean && pnpm setup",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:integration": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh",
    "test:integration:api": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh api",
    "test:integration:load": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh load",
    "test:integration:container": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh container",
    "test:integration:security": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh security",
    "test:integration:responsive": "chmod +x scripts/run-integration-tests.sh && ./scripts/run-integration-tests.sh responsive",
    "test:api": "node tests/integration/api-endpoints.test.js",
    "test:load": "node tests/load/backend-load-test.js",
    "test:security": "node tests/integration/security-validation.test.js",
    "test:containers": "node tests/integration/container-orchestration.test.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.0",
    "turbo": "^1.12.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.15.0"
  }
}