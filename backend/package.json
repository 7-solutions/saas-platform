{
  "name": "@saas-platform/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Monolith backend service (gRPC/HTTP)",
  "scripts": {
    "build": "go build -o bin/backend ./cmd/api",
    "dev": "air || go run ./cmd/api",
    "start": "./bin/backend",
    "lint": "golangci-lint run || go vet ./...",
    "type-check": "go build -o /dev/null ./...",
    "test": "go test ./... -coverprofile=coverage/coverage.out",
    "test:ci": "sh -c 'mkdir -p coverage && go test ./... -coverprofile=coverage/coverage.out -json > coverage/test-report.json'",
    "test:coverage": "go test ./... -coverprofile=coverage/coverage.out",
    "clean": "rm -rf bin coverage .turbo"
  },
  "devDependencies": {}
}