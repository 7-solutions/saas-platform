{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/ui/*": ["../../packages/ui/src/*"],
      "@/shared/*": ["../../packages/shared/src/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.js"
  ],
  "types": ["jest", "@testing-library/jest-dom"],
  "exclude": ["node_modules", "dist", ".next"],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/shared"
    }
  ]
}